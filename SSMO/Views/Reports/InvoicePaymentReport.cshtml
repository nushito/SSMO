@model CustomerOrdersPaymentsReportsViewModel

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="CustomerName"></label>
            <select asp-for="CustomerName" class="form-control">
                <option value="">All</option>
                @foreach (var customerName in Model.CustomerNames)
                {
                    <option value="@customerName">@customerName</option>
                }

            </select>
        </div>
    </div>
    <div class="row">
        <input type="submit" class="btn btn-info" value="Search" />
    </div>
    <br />
</form>

@{
    var previouspage = Model.CurrentPage - 1;
    if (previouspage < 1)
    {
        previouspage = 1;
    }

    var maxpage = Math.Ceiling((double)Model.TotalCustomerOrders / CustomerOrdersPaymentsReportsViewModel.CustomerOrdersPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Reports"
           asp-action="CustomerOrderDetailsForEdit"
           asp-route-currentPage="@previouspage"
           asp-route-customerName="@Model.CustomerName"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxpage ||
        !Model.CustomerPaymentCollection.Any();
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Reports"
           asp-action="CustomerOrderDetailsForEdit"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-customerName="@Model.CustomerName">>></a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th">
                Invoice Number
                </th>
                <th>
                    Date
                </th>
                <th>
                    Payment Status
                </th>
                <th>
                    Advance Payment
                </th>
                <th>
                    Date of Payment
                </th>
                <th>
                    Balance
                </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model.CustomerPaymentCollection)
        {
        <tr>
            <th> @order.DocumentNumber</th>
            <th> @order.Date</th>
            @if( @order.PaidStatus == true)
            {
            <th>Paid</th>
            }
            else
            {
            <th>Not Paid</th>
            }
            <th> @order.PaidAdvance</th>
            <th> @order.DatePaidAmount</th>
            <th> @order.Balance</th>
            <a asp-controller="Reports" asp-action="InvoicePaymentEdit" asp-route-id="@order.Id" class="btn btn-outline-info mr-1">Edit</a>
        </tr>
        }
    </tbody>

</table>


