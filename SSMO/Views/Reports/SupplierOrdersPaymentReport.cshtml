@model SupplierOrdersPaymentReportViewModel
@{
    ViewBag.Title = "Edit Supplier Order Payment";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="SupplierName"></label>
            <select asp-for="SupplierName" class="form-control">
                <option value="">All</option>
                @foreach (var supplierName in Model.SupplierNames)
                {
                    <option value="@supplierName">@supplierName</option>
                }

            </select>
        </div>
        <div class="form-group col-3" >
             <label asp-for="StartDate" >Start Date</label>
             <div class="input-group date" id="datepicker1">
                 <input asp-for="StartDate" type="date" class="form-control" data-date-format="dd-mm-yyyy" value="@DateTime.Now.ToString("dd-MM-yyyy")"/> 
                 <span asp-validation-for="StartDate" class="glyphicon glyphicon-calendar"></span>
             </div>            
        </div>
         <div class="form-group col-3"  >
             <label asp-for="EndDate" >End Date</label>
             <div class="input-group date" id="datepicker2">
                <input asp-for="EndDate"  type="date" class="form-control" data-date-format="dd-mm-yyyy" value="@DateTime.Now.ToString("dd-MM-yyyy")"/> 
                <span asp-validation-for="EndDate" class="glyphicon glyphicon-calendar"></span>
             </div>
        </div>
    </div>
    <div class="row">
        <input type="submit" class="btn btn-info mr-1" value="Search" /> 
        <a class="btn btn-success text-capitalize border-0" data-mdb-ripple-color="dark" asp-controller="Reports" asp-action="ExportPurchasePaymentToExcel"> Download</a>
    </div>
    <br />
</form>

@{
    var previouspage = Model.CurrentPage - 1;
    if (previouspage < 1)
    {
        previouspage = 1;
    }

    var maxpage = Math.Ceiling((double)Model.TotalSupplierOrders / SupplierInvoicePaymentReportViewModel.SupplierInvoicePerPage);
   
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Reports"
           asp-action="SupplierOrdersPaymentReport"
           asp-route-currentPage="@previouspage"
           asp-route-customerName="@Model.SupplierName"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxpage ||
                                         Model.SupplierOrderPaymentCollection == null;
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Reports"
           asp-action="SupplierOrdersPaymentReport"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-customerName="@Model.SupplierName">>></a>
    </div>
</div>
<table class="table">   
    <thead>
        <tr >
                 <th>
                No:
                  </th>
                <th>
                Supplier Order No
                </th>
                <th>
                    Date
                </th>
                <th>
                    Payment Status
                </th>
                 <th>
                    Amount
                </th>                             
                <th>
                    Balance
                </th>
                <th> Advance payment</th>
                <th>Date</th>
                 <th>
                   Next Payments
                </th>
               
        </tr>
    </thead>
    <tbody>
        @{
            int r = 1;            
        }
        @if(Model.SupplierOrderPaymentCollection != null)
        {
            @foreach (var order in Model.SupplierOrderPaymentCollection)
            {
                int c = 1;
                <tr style="background-color:lightyellow">
                    <input type="hidden" value="@order.Id" asp-for="@order.Id">
                    <th>@r</th>
                    <th> @order.SupplierOrderNumber</th>
                    <th> @order.Date</th>
                    @if (@order.PaidStatus == true)
                    {
                        <th>Paid</th>
                    }
                    else
                    {
                        <th>Not Paid</th>
                    }
                    <th> @order.TotalAmount @order.PurchaseCurrency.ToUpper()</th>
                    <th> @order.Balance</th>
                    <th>@order.PaidAvance</th>
                    <th> @order.DatePaidAmount</th>
                    <th class="align-self-auto"> @foreach (var payment in order.Payments)
                        {
                            @payment.PaidAmount<p>-</p>@payment.Date.Date.ToShortDateString()   
                            <br />
                        }        
                    </th>

                    <th><a asp-controller="Reports" asp-action="DetailsSupplierAndPurchasePayment" asp-route-id="@order.Id" class="btn btn-outline-info mr-1">Add new payment</a></th> 
                </tr>               
                <tr>
                    <th colspan="8">
                        <table>
                            <thead>
                                <tr>
                                    <th>
                                    #
                                   </th>
                                    <th>
                                        Purchase Invoice No:
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        Balance
                                    </th>
                                    <th>
                                        Paid advance
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Made payments
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var purchase in order.PurchasePaymentsCollection)
                                {
                                    <tr>
                                        <td>
                                            @r.@c
                                        </td>
                                        <td>
                                            @purchase.PurchaseNumber
                                        </td> 
                                        <td>
                                            @purchase.Amount
                                        </td> 
                                        <td>
                                            @purchase.Balance
                                        </td>
                                        <td>
                                            @purchase.PaidAdvance
                                        </td>
                                        <td>
                                            @purchase.DatePaidAmount
                                        </td>
                                        <td>
                                            @foreach (var payment in purchase.PurchasePaymentsDetails)
                                            {
                                                @payment.PaidAmount @payment.Date <br />
                                            }
                                        </td>

                                    </tr>
                                    c++;
                                }    
                            </tbody>
                        </table>
                    </th>
                </tr>
                r++;
            }
           
        }        
    </tbody>

</table>