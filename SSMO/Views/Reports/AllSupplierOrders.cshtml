@model SupplierOrdersReportAll
@{
    ViewBag.Title = "Supplier Orders";
}
<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="SupplierName"></label>
            <select asp-for="SupplierName" class="form-control">
                <option value="">All</option>
                @foreach (var supplierName in Model.SupplierNames)
                {
                    <option value="@supplierName">@supplierName</option>
                }
            </select>
        </div>
    </div>
    <div class="row">
        <input type="submit" class="btn btn-info" value="Search" />
    </div>
    <br />
</form>

@{
    var previouspage = Model.CurrentPage - 1;
    if (previouspage < 1)
    {
        previouspage = 1;
    }

    var maxpage = Math.Ceiling((double)Model.TotalSupplierOrders / SupplierOrdersReportAll.SupplierOrdersPerPage);
}
<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Reports"
           asp-action="AllSupplierOrders"
           asp-route-currentPage="@previouspage"
           asp-route-customerName="@Model.SupplierName"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxpage ||
        !Model.SupplierOrderCollection.Any();
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Reports"
           asp-action="AllSupplierOrders"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-customerName="@Model.SupplierName">>></a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            Supplier Order Number
        </div>
        <div class="col m-0">
            Date
        </div>
        <div class="col">
            Loading Address
        </div>
        <div class="col">
            Delivery Address
        </div>
        <div class="col">
            Order Status
        </div>
        <div class="col">
            Customer Order Number
        </div>
    </div>
</div>
<hr />
<div class="container">
    @foreach (var order in Model.SupplierOrderCollection)
    {
        <div class="row">
            <div class="col">
                @order.SupplierOrderNumber
            </div>
            <div class="col">
                @order.Date
            </div>
            <div class="col">
                @order.LoadingAddress
            </div>
            <div class="col">
                @order.DeliveryAddress
            </div>
            <div class="col">
                @order.StatusName
            </div>
            <div class="col">
                @order.CustomerOrderConfirmationNumber
            </div>
            <a asp-controller="Reports" asp-action="SupplierOrderDetails" asp-route-id="@order.Id" class="btn btn-info mr-1">Details</a>
            <a asp-controller="Reports" asp-action="SupplierOrderEdit" asp-route-id="@order.Id" class="btn btn-outline-info mr-1">Edit</a>
            <a asp-controller="Reports" asp-action="DeleteSupplierOrder" asp-route-id="@order.Id" class="btn btn-outline-info">Delete</a>
        </div>
        <hr />
    }
</div>