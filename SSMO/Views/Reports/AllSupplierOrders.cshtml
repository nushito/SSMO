@model SupplierOrdersReportAll
@{
    ViewBag.Title = "Supplier Orders";
}
<h5>Supplier Specification Collection</h5>
<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="SupplierName">Choose Supplier</label>
            <select asp-for="SupplierName" class="form-control">
                <option value="">All</option>
                @foreach (var supplierName in Model.SupplierNames)
                {
                    <option value="@supplierName">@supplierName</option>
                }
            </select>
        </div>
        <div class="form-group col-3" >
             <label asp-for="StartDate" >Start Date</label>
             <div class="input-group date" id="datepicker1">
                 <input asp-for="StartDate" type="date" class="form-control" data-date-format="dd-mm-yyyy" value="@DateTime.Now.ToString("dd-MM-yyyy")"/> 
                 <span asp-validation-for="StartDate" class="glyphicon glyphicon-calendar"></span>
             </div>            
        </div>
         <div class="form-group col-3"  >
             <label asp-for="EndDate" >End Date</label>
             <div class="input-group date" id="datepicker2">
                <input asp-for="EndDate"  type="date" class="form-control" data-date-format="dd-mm-yyyy" value="@DateTime.Now.ToString("dd-MM-yyyy")"/> 
                <span asp-validation-for="EndDate" class="glyphicon glyphicon-calendar"></span>
             </div>
        </div>
    </div>
    <div class="row">
        <input type="submit" class="btn btn-info" value="Search" />
    </div>
    <br />
</form>

@{
    var previouspage = Model.CurrentPage - 1;
    if (previouspage < 1)
    {
        previouspage = 1;
    }

    var maxpage = Math.Ceiling((double)Model.TotalSupplierOrders / SupplierOrdersReportAll.SupplierOrdersPerPage);
}
<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Reports"
           asp-action="AllSupplierOrders"
           asp-route-currentPage="@previouspage"
           asp-route-supplierName="@Model.SupplierName"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxpage ||
                             Model.SupplierOrderCollection == null;
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Reports"
           asp-action="AllSupplierOrders"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-supplierName="@Model.SupplierName">>></a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th >
            Supplier Order Number
        </th>
        <th >
            Date
        </th>
        <th >
            Loading Address
        </th>
        <th >
            Delivery Address
        </th>
        <th >
            Order Status
        </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.SupplierOrderCollection != null)
        {
            @foreach (var order in Model.SupplierOrderCollection)
            {
                        <tr>
                            <td >
                        @order.SupplierOrderNumber
                            </td>
                            <td >
                        @order.Date
                            </td>
                            <td >
                        @order.LoadingAddress
                            </td>
                            <td >
                        @order.DeliveryAddress
                            </td>
                            <td >
                        @order.StatusName
                            </td>
                           <td>
                            <a asp-controller="Reports" asp-action="SupplierOrderDetails" asp-route-id="@order.Id" class="btn btn-info mr-1" target="_blank">Details</a>
                           </td>
                           <td>
                              <a asp-controller="Reports" asp-action="SupplierOrderEdit" asp-route-id="@order.Id" class="btn btn-outline-info mr-1" target="_blank">Edit</a>
                           </td>
                        </tr>                       
            }
        }    
    </tbody>
</table>
<hr />
