@model CustomerOrderReportAll

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="CustomerName"></label>
            <select asp-for="CustomerName" class="form-control">
            <option value="">All</option>
                @foreach (var customerName in Model.CustomerNames)
                {
                    <option value="@customerName">@customerName</option>
                }
            </select>
        </div>
        <div class="form-group col-3" >
             <label asp-for="StartDate" >Start Date</label>
             <div class="input-group date" id="datepicker1">
                 <input asp-for="StartDate" type="date" class="form-control" data-date-format="dd-mm-yyyy" value="@DateTime.Now.ToString("dd-MM-yyyy")"/> 
                 <span asp-validation-for="StartDate" class="glyphicon glyphicon-calendar"></span>
             </div>            
        </div>
         <div class="form-group col-3"  >
             <label asp-for="EndDate" >End Date</label>
             <div class="input-group date" id="datepicker2">
                <input asp-for="EndDate"  type="date" class="form-control" data-date-format="dd-mm-yyyy" value="@DateTime.Now.ToString("dd-MM-yyyy")"/> 
                <span asp-validation-for="EndDate" class="glyphicon glyphicon-calendar"></span>
             </div>
        </div>
    </div>
    <div class="row">
<input type="submit" class="btn btn-info" value="Search"/></div>
<br />
</form>

@{
    var previouspage = Model.CurrentPage - 1;
    if(previouspage < 1)
    {
        previouspage = 1;
    }

    var maxpage = Math.Ceiling((double)Model.TotalCustomerOrders / CustomerOrderReportAll.CustomerOrdersPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Reports"
           asp-action="AllCustomerOrders"
           asp-route-currentPage="@previouspage"
           asp-route-customerName="@Model.CustomerName"
          ><<</a>
    </div>
    
    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxpage ||
                                     Model.CustomerOrderCollection == null;
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Reports"
           asp-action="AllCustomerOrders"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-customerName="@Model.CustomerName"
           >>></a>
    </div>
</div>

<div class="container">
   <div class="row">
        <div class="col">
          OC Number
        </div>
        <div class="col">
         Customer PO Number
        </div>
         <div class="col">
          Date
        </div>
         <div class="col">
          Loading Address
        </div>
         <div class="col">
          Delivery Address
        </div>
        <div class="col">
          Order Status
        </div>
        </div>
<hr />
<br />
</div>
<div class="container">
    @if(Model.CustomerOrderCollection != null)
    {
        @foreach (var order in Model.CustomerOrderCollection)
        {
            <div class="row">
                <div class="col">
                    @order.OrderConfirmationNumber
                </div>
                  <div class="col">
                    @order.CustomerPoNumber
                </div>
                 <div class="col">
                    @order.Date
                </div>
                 <div class="col">
                    @order.LoadingPlace
                </div>
                 <div class="col">
                    @order.DeliveryAddress
                </div>
             <div class="col">
                    @order.StatusName
            </div>
            <a asp-controller="Reports" asp-action="CustomerOrderDetails" asp-route-id="@order.Id" class="btn btn-info mr-1">Details</a>
            <a asp-controller="Reports" asp-action="CustomerOrderEdit" asp-route-id="@order.Id" class="btn btn-outline-info mr-1">Edit</a>
            </div>
            <hr />
        }
    }   
</div>


