@model InvoicesViewModel
@{
    ViewBag.Title = "All Invoices";
}
<h5>Invoice Collection</h5>
<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="MyCompanyId">Choose Seller</label>
            <select asp-for="MyCompanyId" class="form-control">
            <option value="">All</option>
                @foreach (var name in Model.MyCompanyNames)
                {
                    <option value="@name.Id">@name.Name</option>
                }
            </select>
        </div>
         <div class="form-group col-3" >
             <label asp-for="StartDate" >Start Date</label>
             <div class="input-group date" id="datepicker1">
                 <input asp-for="StartDate" type="date" class="form-control" data-date-format="dd-mm-yyyy" value="@DateTime.Now.ToString("dd-MM-yyyy")"/> 
                 <span asp-validation-for="StartDate" class="glyphicon glyphicon-calendar"></span>
             </div>            
        </div>
         <div class="form-group col-3"  >
             <label asp-for="EndDate" >End Date</label>
             <div class="input-group date" id="datepicker2">
                <input asp-for="EndDate"  type="date" class="form-control" data-date-format="dd-mm-yyyy" value="@DateTime.Now.ToString("dd-MM-yyyy")"/> 
                <span asp-validation-for="EndDate" class="glyphicon glyphicon-calendar"></span>
             </div>
        </div>
    </div>   
    <div class="row">
<input type="submit" class="btn btn-info" value="Search"/></div>
<br />
</form>

@{
    var previouspage = Model.CurrentPage - 1;
    if(previouspage < 1)
    {
        previouspage = 1;
    }

    var maxpage = Math.Ceiling((double)Model.TotalInvoices / InvoicesViewModel.InvoicesPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Reports"
           asp-action="AllInvoices"
           asp-route-currentPage="@previouspage"
           asp-route-myCompanyId="@Model.MyCompanyId"
           asp-route-startDate = "@Model.StartDate"
           asp-route-endDate = "@Model.EndDate"
          ><<</a>
    </div>
    
    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxpage ||
                                     Model.InvoiceCollection == null ;
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Reports"
           asp-action="AllInvoices"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-myCompanyId="@Model.MyCompanyId"
           asp-route-startDate = "@Model.StartDate"
           asp-route-endDate = "@Model.EndDate"
           >>></a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Invoice Number
            </th>
            <th>
                Document type
            </th>
            <th>
                Date
            </th>
            <th>
                Customer
            </th>
            <th>
                Customer OC Numbers
            </th>
            <th>
                Delivery Terms
            </th>
            <th>
                Invoice Amount
            </th>
            <th>
                Credit Note to Invoice N
            </th>
             <th>
                Debit Note to Invoice N
            </th>
        </tr>
    </thead>
    <tbody> 
        @if(Model.InvoiceCollection != null)
        {
            @foreach (var order in Model.InvoiceCollection)
            {
                        <tr>
                            <th>
                        @order.DocumentNumber
                            </th>
                        <th>
                        @order.DocumentType
                        </th>
                            <th>
                        @order.Date
                            </th>
                            <th>
                        @order.CustomerName
                            </th>
                            <th>
                        @foreach (var item in order.CustomerOrders)
                        {
                            @item.OrderConfirmationNumber <br />
                        }
                            </th>
                            <th>
                        @order.Incoterms
                            </th>
                            <th>
                        @order.TotalAmount
                            </th>
                            <th>
                        @order.CreditToInvoiceDocumentNumber
                            </th>
                            <th>
                        @order.DebitToInvoiceDocumentNumber
                            </th>
                            <th><a asp-controller="Reports" 
                                asp-action="InvoiceDetails" 
                                asp-route-id="@order.Id" 
                                asp-route-footer="@order.FooterId"
                                asp-route-header="@order.HeaderId"
                                class="btn btn-info mr-1" target="_blank">Details</a></th>
                    @if(order.DocumentType == "Invoice")
                    {
                       <th> <a asp-controller="Reports" 
                           asp-action="EditInvoice" 
                           asp-route-id="@order.Id" 
                           asp-route-documentType="@order.DocumentType"                           
                           class="btn btn-info mr-1" target="_blank">Edit</a> </th>
                    }
                    else if(order.DocumentType == "CreditNote")
                    {
                                   <th> <a asp-controller="Reports" asp-action="EditCreditNote" asp-route-id="@order.Id" asp-route-documentType="@order.DocumentType" class="btn btn-info mr-1" target="_blank">Edit</a> </th>
                    }
                    else
                    {
                                  <th> <a asp-controller="Reports" asp-action="EditDebitNote" asp-route-id="@order.Id" asp-route-documentType="@order.DocumentType" class="btn btn-info mr-1" target="_blank">Edit</a> </th>
                    }                    
                </tr>
            }  
        }                     
    </tbody>
</table>
