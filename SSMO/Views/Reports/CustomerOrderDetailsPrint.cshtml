@model CustomerOrderPrintViewModel
@{
    ViewBag.Title = "Customer Order";
    var i = 0;
}

<div class="card">
  <div class="card-body">
    <div class="container mb-5 mt-3">
      <div class="row d-flex align-items-baseline">
        <div class="col-xl-9">
          <p style="color: #7e8d9f;font-size: 20px;">@Model.Type <span>:</span> <strong>@Model.OrderConfirmationNumber</strong></p>
        </div>
        <div class="col-xl-3 float-end">
          <a class="btn btn-light text-capitalize border-0" data-mdb-ripple-color="dark"><i
              class="fas fa-print text-primary"></i> Print</a>
          <a class="btn btn-light text-capitalize" data-mdb-ripple-color="dark" asp-controller="Reports" asp-action="ExportCoToExcel"><i
              class="far fa-file-pdf text-danger"></i> Export xls</a>              
        </div>
        <hr>
      </div>

      <div class="container">
        <div class="col-md-12">
          <div class="text-center">
            <i class="fab fa-mdb fa-4x ms-0" style="color:#5d9fc5 ;"></i>
            <p class="pt-0">@Model.Date.Date.ToShortDateString()</p>
          </div>
        </div>

        <div class="row">
          <div class="col-xl-8">
            <ul class="list-unstyled">
              <li class="text-muted">To: <span style="color:#5d9fc5 ;">@Model.Customer.Name</span></li>
              <li class="text-muted">@Model.Customer.EIK</li>
               <li class="text-muted">@Model.Customer.VAT</li>
               <li class="text-muted">@Model.Customer.Country</li>
                <li class="text-muted">@Model.Customer.City</li>
               <li class="text-muted">@Model.Customer.Street</li>
                <li class="text-muted">@Model.Customer.RepresentativePerson</li>
            </ul>
          </div>
          <div class="col-xl-4">
            <p class="text-muted">@Model.MyCompany.MyCompanyName</p>
            <ul class="list-unstyled">
              <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">@Model.MyCompany.Eik</span></li>
              <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">@Model.MyCompany.Vat </span></li>
               <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">@Model.MyCompany.Street </span></li>
                <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">@Model.MyCompany.City </span></li>
                 <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">@Model.MyCompany.Country </span></li>

           </ul>
          </div>
        </div>
        <div class="row">
             <div class="col-xl-8">
            <ul class="list-unstyled">            
                   <li class="text-muted">Customer Po No: <span style="color:#5d9fc5 ;">@Model.CustomerPoNumber                                  
                  </span></li>
              <li class="text-muted">Delivery Terms: <span style="color:#5d9fc5 ;">@Model.DeliveryTerms</span></li>             
            </ul>
          </div>
          <div class="col-xl-4">
              Loading address: @Model.LoadingPlace <br />
              Delivery address: @Model.DeliveryAddress <br />
              Delivery Period: @Model.Eta <br />
          </div>          
          <div class="col-xl-4">
                        @if (Model.FiscalAgent != null)
                            @Model.FiscalAgent.Name

         <br />
                            @if(Model.FiscalAgent != null)
                        {
                            @Model.FiscalAgent.Details
                        }
                       
                  </div>
                </div>            
                <div class="row my-2 mx-1 justify-content-center">
                  <table class="table table-striped table-borderless">
                    <thead style="background-color:#84B0CA ;" class="text-white">
                      <tr>
                            <th scope="col">#</th>
                            <th scope="col">Description</th>
                            <th scope="col">Grade</th>
                            <th scope="col">Size</th>
                            <th scope="col">FSC Claim</th>
                            <th scope="col">FSC Certificate</th>
                            <th scope="col">HS Code</th>
                            <th scope="col">Pallets</th>
                            <th scope="col">Sheets per Pallet</th>
                            <th scope="col">Unit</th>
                            <th scope="col">Qty</th>
                            <th scope="col">Unit Price</th>                            
                            <th scope="col">Amount (@Model.Currency)</th>
                      </tr>
                    </thead>
                    <tbody>
                                @foreach (var product in @Model.Products)
                            {
                                i += 1;                                
                                <tr>
                                    <td>@i</td>
                                    <td>@product.Description</td>
                                    <td>@product.Grade</td>
                                    <td>@product.Size</td>
                                    <td>@product.FSCClaim</td>
                                    <td>@product.FscCertificate</td>
                                    <td>@product.HsCode</td>
                                    <td>@product.Pallets</td>  
                                    <td>@product.SheetsPerPallet</td>   
                                    <td>@product.Unit</td>
                                    <td>@product.Quantity</td>                                    
                                    <td>@product.SellPrice</td>
                                    <td>@product.Amount.ToString("N2")</td>
                                </tr>
                            }

            </tbody>
          </table>
        </div>
        <div class="row">
          <div class="col-xl-6">
            <ul class="list-unstyled">
              <li class="text-muted ms-3"><span class="text-black me-4">Amount: </span>@Model.Amount.ToString("N2")</li>
              <li class="text-muted ms-3 "><span class="text-black me-4">VAT @Model.Vat: </span>@Model.SubTotal.ToString("N2")</li>            
            <li class="float-start"><span class="text-black">Total Amount: </span><span >@Model.TotalAmount.ToString("N2") @Model.Currency</span></li>
          </ul>
          </div>
        </div>
        <hr/>
        <div>
            <ul class="list-unstyled">               
               <li>Notes: @Model.Comment</li>
               <li>Country of origin: @Model.Origin</li>
             </ul>
        </div>
        <div class="row">
                    @if(Model.FscText != null)
                    {
                        <span>@Model.FscText</span> 
                        <br />
                       <span>License code:</span> @Model.FscCertificate
                    }
        </div>
        <hr />
        <table class="table-borderless">
            <tr class="mb-1">
                <td class="px-3 mr-5">
                    Event Date: @Model.Date.ToShortDateString() <br />
                    Deal Type: @Model.DealType <br />
                    Description of the deal: @Model.DealDescription                   
                </td>
                <td class="px-3 mr-5">
                   Payment Terms: @Model.PaymentTerms
                </td>
            </tr>
           
            <tr>
                @foreach (var bank in Model.BankDetails)
                {
                        <td class="px-3 mr-5">
                                Currency:@bank.CurrencyName<br>
                                Bank:@bank.BankName<br>
                                IBAN:@bank.Iban<br>
                                SWIFT:@bank.Swift
                            </td>
                }
            </tr>
        </table>

      </div>
    </div>
  </div>
</div>
