@model AddBankDetailsFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="CompanyName">Company</label>
        <select asp-for="CompanyName" asp-items="@(new SelectList(Model.CompanyNames))">
            @foreach (var name in Model.CompanyNames)
            {
                <option  value="@name">@name</option>
            }
        </select>
    </div>
    
@*</form>
   
<form method="post">*@
    @*<div class="form-group">
        <label asp-for="CompanyName"></label>
        <input type="hidden" asp-for="CompanyName" value="@Model.CompanyName" />
