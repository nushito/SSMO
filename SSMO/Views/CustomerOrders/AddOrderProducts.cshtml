@model IList<ProductViewModel>

@using SSMO.Services.Product
@inject IProductService service;
@{
   

     var count = int.Parse(TempData["Count"].ToString());
}


<form method="post">    
    <fieldset>
        <h4 >Add Products</h4>
        <table id="clientTable" class="table table-bordered">
            <thead class="thead-light">
                <tr>
                 <td>Description</td>
                <td>Size</td>
                <td>Grade</td>
                <td>FSC claim</td>
                <td>FSC certificate</td>
                <td>Pieces</td>
                <td>Quantity m3</td>
                <td>Price</td>
               
                </tr>
            </thead>
            <tbody>

              
               
                        @for (int i = 0; i < count; i++)
                {
                     <tr>
                            <td class="col-sm-1">
                                <div class="editor-field">
                                    <select name="Description" asp-for="@Model[i].Description" >
                                        <option value="">All</option>
                                        @foreach (var type in service.GetDescriptions())
                                        {
                                            <option value="@type">@type</option>
                                        }
                                    </select>
                                </div>
                            </td>
                            <td class="col-sm-1">
                                <div class="editor-field">
                                    <select name="Size[i]" id="Size" asp-for="@Model[i].Size)">
                                        <option value="">All</option>
                                        @foreach (var size in service.GetSizes())
                                        {
                                            <option value="@size">@size</option>
                                        }
                                    </select>
                                </div>
                            </td>
                            <td class="col-sm-1">
                                <div class="editor-field">
                                    <select name="Grade[i]" id="Grade" asp-for="@Model[i].Grade)">
                                        <option value="">All</option>
                                        @foreach (var grade in service.GetGrades())
                                        {
                                            <option value="@grade">@grade</option>
                                        }
                                    </select>
                                </div>
                            </td>

                               <td class="col-sm-1">
                                <div class="editor-field">
                                   @* <select name="FSCClaim[0]" id="FSCClaim" asp-for="@Model.FSCClaim">

                                        <option value="">-</option>*@
                                      
                                  
                                    <input asp-for="@Model[i].FSCClaim" id="FSCclaim" class="text-box single-line" name="FSCClaim" value="" required="required">
                                </div>
                            </td>

                             <td class="col-sm-1">
                                <div class="editor-field">
                                    <input asp-for="@Model[i].FSCSertificate" id="FSCCertificate" class="text-box single-line" name="FSCSertificate" value="" required="required">
                                </div>
                            </td>

                            <td class="col-sm-1">
                                <div class="editor-field">
                                    <input  asp-for="@Model[i].Pieces" id="Pieces" class="text-box single-line" name="Pieces" value="" required="required">
                                </div>
                            </td>
                            <td class="col-sm-1">
                                <div class="editor-field">
                                    <input asp-for="@Model[i].Cubic" id="Cubic" class="text-box single-line" name="Cubic" value="" required="required">
                                </div>
                            </td>
                            <td class="col-sm-1">
                                <div class="editor-field">

                                    <input asp-for="@Model[i].CostPrice" id="Price" class="text-box single-line" name="CostPrice" value="" required="required">
                                </div>
                            </td>
                            
                        </tr>
                }                
                       
                

            </tbody>                
            
        </table>
       
        <hr />
        <p>
            <button type="submit" class="btn btn-primary">Save</button>
        </p>
      
    </fieldset>
</form>

