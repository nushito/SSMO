@model DescriptionsViewModel
@{
    ViewBag.Title = "New Size";
}

<h3 class="text-center">Add New Size</h3>

<form method="post">
    <div class="form-group offset-3 mb-2 col-md-6">
        <label asp-for="Name">Size mm</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Thickness/Length/Width mm">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}