@model DescriptionsViewModel
@{
    ViewBag.Title = "New Description";
}

<h3 class="text-center">Add New Description</h3>

<form method="post">
  
    <div class="form-group offset-3 mb-2 col-md-6">
        <label asp-for="Name">Description</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group offset-3 mb-2 col-md-6">
        <label asp-for="BgName">БГ Описание</label>
        <input asp-for="BgName" type="text" class="form-control" placeholder="БГ Описание">
        <span asp-validation-for="BgName" class="small text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}