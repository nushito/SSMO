@model ServiceOrderFormModel
@{
    ViewBag.Title = "New Transport Order";
}

<form method="post">
    @if (ViewBag.FirstTransport)
    {
        <div class="row col-md-4">
            <label asp-for="Number">Fill First Transport Number</label>
            <input asp-for="Number" type="text" class="form-control" class="form-control">
            </div>
    }
     <div class="row col-md-4">
            <label asp-for="Date">Date</label>
            <input asp-for="Date" type="date" class="form-control" class="form-control">
            </div>
     <div class="form-group row col-md-6">
            <div class="form-group">
                <label >My Company</label>
                <select id="mycompany" asp-for="MyCompanyId" class="form-control">
                <option value="">All</option>
                @foreach (var company in Model.MyCompanies)
                {
                                <option value="@company.Id">@company.Name</option>
                }
                    <span asp-validation-for="MyCompanyId" class="small text-danger"></span>
                </select>
            </div>            
        </div>    

       

       <div class="form-group row col-md-4">
        <label asp-for="LoadingAddress">Loading address</label>
        <input asp-for="LoadingAddress" type="text" name="LoadingAddress" class="form-group" />
       </div>

        <div class="form-group row col-md-4">
        <label asp-for="DeliveryAddress">Delivery address</label>
        <input asp-for="DeliveryAddress" type="text" name="DeliveryAddress" class="form-group" />
       </div>

        <div class="form-group row col-md-4">
        <label asp-for="TruckNumber">Truck number</label>
        <input asp-for="TruckNumber" type="text" name="TruckNumber" class="form-group" />
       </div>

          <div class="form-group row col-md-4">
        <label asp-for="Cost">Cost</label>
        <input asp-for="Cost" type="number" name="Cost" class="form-group" />
       </div>

        <div class="form-group row col-md-4">
        <label asp-for="CurrencyId"></label>
        <select id="currency" asp-for="CurrencyId" class="form-control">
            @foreach (var item in Model.Currencies)
            {
             <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

     <div class="form-group row col-md-4">
        <label asp-for="SupplierId">Choose Supplier</label>
        <select id="SupplierId" asp-for="SupplierId" class="form-control">
            <option value="">-</option>
            @foreach (var item in Model.Suppliers)
            {
                    <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

     <div class="row col-md-4 mb-3">           
             <label asp-for="PurchaseInvoiceId"  class="control-label"> Select Purchase</label>
             <select asp-for="PurchaseInvoiceId"  class="form-control" id="PurchaseInvoiceNumber" name="PurchaseInvoiceId" asp-items="@(new SelectList(string.Empty,"PurchaseInvoiceId", "PurchaseInvoiceNumber"))"></select>               
        </div>  
<p>or Choose </p>
     <input type="submit" value="Add Transport Order" class="btn btn-primary mt-3"/>        
</form>


@section Scripts{
        <script type="text/javascript" src="~/js/getInvoicesForTransport.js">
     
    </script>
        
}
 